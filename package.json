{
  "name": "craftcms-docker",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "serve": "docker kill $(docker ps -q); docker-compose up -d",
    "stop": "docker-compose down --volumes",
    "craft-compose": "docker-compose exec web composer create-project craftcms/craft /var/www/html/private/craft",
    "craft-plugins": "docker-compose exec web composer require ether/seo --working-dir=/var/www/html/private/craft",
    "craft-public": "cp -r ./server/private/craft/web/ ./server/public/; cp ./config/public/index.php ./server/public",
    "craft-install": "docker-compose exec web private/craft/craft install --site-name=Boilerplate --email=anonymous@mail.com --site-url=http://localhost:8080 --language=en-GB",
    "craft-build": "cp ./config/private/craft/config/general.php ./server/private/craft/config; cp ./config/private/craft/config/project.yaml ./server/private/craft/config",
    "craft-rebuild": "docker-compose exec web private/craft/craft project-config/rebuild",
    "watch": "webpack --config webpack.dev.js --watch",
    "dev": "webpack --config webpack.dev.js",
    "build": "webpack --config webpack.prod.js",
    "setup": "npm run craft-compose; npm run craft-plugins; npm run craft-public; npm run craft-install; npm run craft-build; clear; echo \"\nCompleted!\n\nVisit \\x1b[4m\\x1b[34mhttp://localhost:8080/admin\\x1b[0m to sync project.yaml and finish setup.\n\n\"",
    "postinstall": "docker-compose build",
    "browser-sync": "browser-sync start --proxy localhost:8080"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {

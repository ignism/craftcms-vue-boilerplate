    "@swup/head-plugin": "^1.0.2",
    "animejs": "^3.1.0",
    "autoprefixer": "^9.7.4",
    "babel-loader": "^8.0.6",
    "browser-sync": "^2.26.7",
    "clean-webpack-plugin": "^0.1.19",
    "color-thief": "^2.2.5",
    "copy-webpack-plugin": "^5.1.1",
    "critical": "^1.3.9",
    "critical-css-webpack-plugin": "^0.2.0",
    "css-loader": "^1.0.1",
    "cssnano": "^4.1.7",
    "eventemitter3": "^4.0.0",
